<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.pepdeal.in.activity.HomeActivity" />
    </data>


    <androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.HomeActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/purple_500"
                    android:paddingHorizontal="@dimen/margin_10">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_menu"
                        android:layout_width="@dimen/margin_35"
                        android:layout_height="match_parent"
                        android:layout_marginRight="@dimen/margin_10"
                        android:adjustViewBounds="true"
                        android:padding="@dimen/margin_5"
                        android:src="@drawable/ic_menu" />


                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/margin_100"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/iv_menu"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_white_logo" />

                    <RelativeLayout
                        android:layout_width="@dimen/margin_30"
                        android:layout_height="@dimen/margin_30"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:adjustViewBounds="true"
                            android:src="@drawable/ic_home_notification" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/margin_15"
                            android:layout_alignParentEnd="true"
                            android:layout_marginRight="@dimen/margin_1"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_8"
                            android:textStyle="bold" />
                    </RelativeLayout>


                </RelativeLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:background="@color/purple_500">


                    <androidx.appcompat.widget.SearchView
                        android:id="@+id/searchView"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:layout_marginVertical="@dimen/margin_10"
                        android:background="@drawable/search_edittext_background_layout"
                        android:focusableInTouchMode="true"
                        android:focusedByDefault="false"
                        android:inputType="text"
                        app:iconifiedByDefault="false"
                        app:queryBackground="@color/transparent"
                        app:queryHint="Search"
                        app:searchHintIcon="@color/black" />


                </androidx.appcompat.widget.LinearLayoutCompat>



                <androidx.appcompat.widget.AppCompatTextView

                    android:id="@+id/userid"
                    android:text="userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <androidx.appcompat.widget.AppCompatTextView

                    android:id="@+id/usermobile"
                    android:text="userid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="none">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFFFCC">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rec_tab"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.fragment.app.FragmentContainerView
                        android:id="@+id/fragment_container_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/navView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="@color/transparent"
            android:fitsSystemWindows="true"
            app:itemIconTint="@color/purple_500">

            <include
                android:id="@+id/include_layout"
                layout="@layout/navigation_layout" />

        </com.google.android.material.navigation.NavigationView>

    </androidx.drawerlayout.widget.DrawerLayout>
</layout>