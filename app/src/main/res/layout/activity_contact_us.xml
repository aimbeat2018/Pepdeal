<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="handler"
            type="com.pepdeal.in.activity.AddShopActivity.ClickHandler" />
    </data>

    <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.ContactUsActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/purple_500"
                android:paddingHorizontal="@dimen/margin_10">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_menu"
                    android:layout_width="@dimen/margin_35"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:adjustViewBounds="true"
                    android:onClick="@{handler::onBackClick}"
                    android:padding="@dimen/margin_5"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:tint="@color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/margin_100"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/iv_menu"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_white_logo" />

                <RelativeLayout
                    android:layout_width="@dimen/margin_30"
                    android:layout_height="@dimen/margin_30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_home_notification" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="@dimen/margin_15"
                        android:layout_height="@dimen/margin_15"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="@dimen/margin_1"
                        android:fontFamily="@font/roboto_regular"
                        android:gravity="center"
                        android:text="5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_8"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_10"
                android:layout_marginVertical="@dimen/margin_50"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_5"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Our Support email ID"
                    android:textColor="@color/grayTextColor"
                    android:textSize="@dimen/text_15"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_6"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="admin@pepdeal.in"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/text_17" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_20"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_10"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="@string/name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_marginBottom="@dimen/margin_5"
                            app:cardCornerRadius="@dimen/margin_20"
                            app:cardElevation="@dimen/margin_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_5"
                                android:layout_marginVertical="@dimen/margin_6"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_gravity="center">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35"
                                    android:layout_marginHorizontal="@dimen/margin_5"
                                    android:background="@null"
                                    android:fontFamily="@font/roboto_regular"
                                    android:hint="@string/name"
                                    android:paddingStart="@dimen/margin_5"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/lightGrayColor"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_13"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="@string/email_address"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_marginBottom="@dimen/margin_5"
                            app:cardCornerRadius="@dimen/margin_20"
                            app:cardElevation="@dimen/margin_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_5"
                                android:layout_marginVertical="@dimen/margin_6"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_gravity="center">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35"
                                    android:layout_marginHorizontal="@dimen/margin_5"
                                    android:background="@null"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center_vertical"
                                    android:hint="@string/email_address"
                                    android:inputType="textEmailAddress"
                                    android:paddingStart="@dimen/margin_5"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/lightGrayColor"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_13"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="@string/enter_mobile_number"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_marginBottom="@dimen/margin_5"
                            app:cardCornerRadius="@dimen/margin_20"
                            app:cardElevation="@dimen/margin_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_5"
                                android:layout_marginVertical="@dimen/margin_6"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_gravity="center">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_mobile"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_35"
                                    android:layout_marginHorizontal="@dimen/margin_5"
                                    android:background="@null"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center_vertical"
                                    android:hint="@string/enter_mobile_number"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:paddingStart="@dimen/margin_5"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/lightGrayColor"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_13"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="@string/enter_query"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_15" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_7"
                            android:layout_marginBottom="@dimen/margin_5"
                            app:cardCornerRadius="@dimen/margin_20"
                            app:cardElevation="@dimen/margin_5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="@dimen/margin_5"
                                android:layout_marginVertical="@dimen/margin_6"
                                android:gravity="center"
                                android:orientation="horizontal"
                                app:layout_gravity="center">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/edt_query"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_60"
                                    android:layout_marginHorizontal="@dimen/margin_5"
                                    android:background="@null"
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="top"
                                    android:hint="@string/enter_query"
                                    android:paddingStart="@dimen/margin_5"
                                    android:paddingTop="@dimen/margin_5"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/lightGrayColor"
                                    android:textSize="@dimen/text_14" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/margin_15"
                        android:layout_marginVertical="@dimen/margin_20"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_submit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_10"
                            android:layout_marginVertical="@dimen/margin_10"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/blue"
                            app:cardCornerRadius="@dimen/margin_20">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/save_shop"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"
                                android:padding="@dimen/margin_15"
                                android:text="@string/submit"
                                android:textColor="@color/white" />
                        </androidx.cardview.widget.CardView>


                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_3"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Feel free to reach us if you have any query/complaint."
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_15" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>